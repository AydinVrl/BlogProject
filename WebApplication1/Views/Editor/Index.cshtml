@{
    ViewData["Title"] = "Index";
    int bCount = ViewBag.blogCount;
    int cCount = ViewBag.categoryCount;
    int coCount = ViewBag.commentCount;
}


<div class="row">
    <div class="col-md-4">
        <a asp-action="GetBlogs" asp-controller="Admin" class="text-white">
            <div class="card admin-card mb-3" style="max-width: 18rem;">
                <div class="card-header">
                    <h5 class="card-title">Bloglar</h5>
                </div>
                <div class="card-body">
                    <p class="card-text my-3">Total Blog Count: <b>@bCount</b></p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="GetCategory" asp-controller="Admin" class="text-white">
            <div class="card admin-card mb-3" style="max-width: 18rem;">
                <div class="card-header">
                    <h5 class="card-title">Kategoriler</h5>
                </div>
                <div class="card-body">
                    <p class="card-text my-3">Category Count: <b>@cCount</b></p>
                </div>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a asp-action="GetComments" asp-controller="Admin" class="text-white">
            <div class="card admin-card mb-3" style="max-width: 18rem;">
                <div class="card-header">
                    <h5 class="card-title">Yorumlar</h5>
                </div>
                <div class="card-body">
                    <p class="card-text my-3">Comment Count: <b>@coCount</b></p>
                </div>
            </div>
        </a>
    </div>
</div>