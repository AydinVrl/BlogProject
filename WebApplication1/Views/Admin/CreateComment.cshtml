@model Project.Entities.DTOs.CommentDTO

@{
    ViewData["Title"] = "CreateComment";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
<div class="form-group">
                <label asp-for="BlogId" class="control-label"></label>
                <select asp-for="BlogId" class="form-control" asp-items="ViewBag.Blogs">
                    <option value="">-- Select Blog --</option>
                </select>
                <span asp-validation-for="BlogId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <!-- Dropdown for Checked (Approval Status) -->
            <div class="form-group">
                <label asp-for="Checked" class="control-label"></label>
                <select asp-for="Checked" class="form-control">
                    <option value="0">Pending</option>
                    <option value="1">Approved</option>
                    <option value="2">Unapproved</option>
                </select>
                <span asp-validation-for="Checked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
