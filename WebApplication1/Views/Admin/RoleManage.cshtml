﻿@using Project.Entities.VMs
@model ManagerUserRoleVM
@{
    ViewData["Title"] = "RoleManage";
}

<hr />
<form asp-action="RoleManage" method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="fs-4 my-3">
        <b>User Id:</b> @Model.UserId <b><br />User Name:</b> @Model.UserName
    </div>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Yetki</th>
       
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                    <tr>
                        <td style="width: 10rem;">@role.RoleName</td>
                        <td>
                            <input type="checkbox" asp-for="Roles[Model.Roles.IndexOf(role)].IsSelected" />
                            <input type="hidden" asp-for="Roles[Model.Roles.IndexOf(role)].RoleName" />
                        </td>
                    </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-danger">Kaydet</button>
   
</form>

